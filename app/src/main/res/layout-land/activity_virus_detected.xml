<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#B71C1C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/screen_padding">

        <!-- Левая часть с иконкой -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="@dimen/medium_margin">

            <ImageView
                android:id="@+id/virus_icon"
                android:layout_width="@dimen/virus_icon_size"
                android:layout_height="@dimen/virus_icon_size"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/medium_margin" />

            <TextView
                android:id="@+id/virus_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вирус обнаружен!"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />

        </LinearLayout>

        <!-- Правая часть с информацией и кнопкой -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/virus_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="package.name"
                android:textSize="@dimen/medium_text_size"
                android:textColor="#FFCDD2"
                android:layout_marginBottom="@dimen/large_margin"
                android:gravity="center" />

            <Button
                android:id="@+id/virus_delete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_min_height"
                android:text="Удалить вирус"
                android:textAllCaps="true"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="@dimen/button_text_size"
                android:padding="@dimen/button_padding" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
