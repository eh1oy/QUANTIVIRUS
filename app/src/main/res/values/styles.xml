<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для скругленной иконки -->
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Стиль для Material You кнопок -->
    <style name="MaterialYouButton" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <!-- Стиль для Material You карточек -->
    <style name="MaterialYouCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">16dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources> 